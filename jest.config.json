{
  "collectCoverage"           : true,
  "collectCoverageFrom"       : [
    "src/**/*.{ts,js}",
    "!**/*.d.ts"
  ],
  "coveragePathIgnorePatterns": [
    "/~.*"
  ],
  "coverageDirectory"         : "test_results",
  "coverageReporters"         : [
    "clover",
    "lcov",
    "text-summary"
  ],
  "globals"                   : {
    "ts-jest": {
      "babelConfig": false,
      "tsConfig"   : "tests/tsconfig.json"
    }
  },
  "moduleFileExtensions"      : [
    "ts",
    "js",
    "json"
  ],
  "moduleNameMapper"          : {},
  "setupFiles"                : [],
  "testRegex"                 : "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
  "transform"                 : {
    "^.+\\.tsx?$": "ts-jest"
  },
  "preset"                    : "ts-jest",
  "testMatch"                 : null
}
